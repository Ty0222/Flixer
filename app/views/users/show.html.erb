<article id="user">
	<header>
		<h1> Member Since <%= @user.created_at.strftime("%B %Y") %></h1>
	</header>
	<%= profile_image_for(@user) %>
	<h2><%= @user.username %></h2>
	<h3><%= @user.email %></h3>

	<nav>
		<% if current_user?(@user) %>
			<%= link_to "Edit Account", edit_user_path(@user) %> | 
			<%= link_to "Delete Account", @user,
			 						method: :delete,
			 						data: { confirm: "Are you sure you want to permanently delete your account?" } %>
		<% end %>
	</nav>
	<br />
	<% if @favorite_movies.any? %>
	<h3>Favorite Movies</h3>
		<% @favorite_movies.find_each do |movie| %>
		<li>
			<%= link_to movie.title, movie %>
			<%= image_for(movie, type: :favorite_movie) %>
		</li>
		<% end %>
	<% end %>
	<br />
	<% if @reviews.any? %>
	<h3>Reviews</h3>
	<ol>
		<% @reviews.find_each do |review| %>
		<li>
			(<%= time_ago_in_words(review.created_at).capitalize %> ago)
			<br />
			<%= link_to content_tag(:strong, review.movie.title), movie_path(review.movie) %> - <%= pluralize(review.stars, "Star") %>
			<p>
				&quot;<%= review.comment %>&quot;
			</p>
			<br />
		</li>
		<% end %>
	</ol>
	<% end %>
</article>