<header>
	<h1>Genres</h1>
</header>

<ul>
<% @genres.each do |genre| %>
	<li><%= link_to genre.name, genre_movies_path(genre) %> 
		<% if current_user_admin? %> - <%= link_to "Edit", edit_genre_path(genre) %> - <%= link_to "Delete", genre, method: :delete, data: { confirm: "Are you sure?" } %></li>
		<% end %>
<% end %>
</ul>
