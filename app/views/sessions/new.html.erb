<header>
	<h1>Sign In</h1>
</header>

<%= form_tag(session_path) do %> 
<p>
	<%= label_tag :email %> or <%= label_tag :username %><br>
	<%= text_field_tag :email, nil, autofocus: true, required: true %>
</p>
<p>
	<%= label_tag :password %><br>
	<%= password_field_tag :password, nil, required: true %>
</p>
<p>
	<%= submit_tag "Sign In" %>
	<%= link_to "Cancel", movies_path %>
</p>
<% end %>
<p>
	Don't have an account? <%= link_to "Sign Up", signup_path %> here!
</p>
